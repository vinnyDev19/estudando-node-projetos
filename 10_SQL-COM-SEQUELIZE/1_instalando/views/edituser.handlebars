<section class="cadastro">
<h1>Adicione um Usuário!</h1>
<form action="/users/edit" class="form" method="POST">
<div class="form-control">
    <input type="hidden" name="id" value="{{user.id}}">
    <label for="name">Nome:</label>
    <input type="text" name="name" value="{{user.name}}">
</div>
<div class="form-control">
    <label for="occupation">Ocupação:</label>
    <input type="text" name="occupation" value="{{user.occupation}}">
</div>
<div class="form-control form-checkbox">
    {{#if user.newsletter}}
    <input type="checkbox" name="newsletter" checked >
    {{else}}
     <input type="checkbox" name="newsletter">
    {{/if}}
    <label class="newsletter" for="newsletter">Enviar promoções?</label>
</div>
<input type="submit" value="Editar">
</form>
</section>
<div class="cadastro">
    <h2>Endereços:</h2>
    <form action="/address/create" method="POST">
    <input type="hidden" name="UserId" value="{{user.id}}">
    <div class="form-control">
        <label for="street">Rua:</label>
        <input type="text" name="street" placeholder="Digite a rua">
    </div>
        <div class="form-control">
        <label for="number">Número:</label>
        <input type="text" name="number" placeholder="Digite o número da residência">
    </div>
        <div class="form-control">
        <label for="city">Cidade:</label>
        <input type="text" name="city" placeholder="Digite a sua cidade">
    </div>
    <input type="submit" value="Incluir endereço">
    </form>

    <div class="address-list">
        <h2>Lista de Endereços</h2>
        {{#each user.Addresses }}
        <p>#{{this.id}} - 
            {{this.street}} - 
            {{this.number}} - 
            {{this.city}}
            <form action="/address/delete" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
            <input type="hidden" name="UserId" value="{{this.UserId}}">
            <input class="remover" type="submit" value="Excluir">
            </form>
            </p>
        {{/each}}
    </div>
</div>